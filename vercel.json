{
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",  
      "dest": "server.js"
    },
    {
      "src": "/records/(.*)",  
      "dest": "server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|ttf|woff|woff2|json))$",
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*)",  
      "dest": "server.js"
    }
  ]
}
