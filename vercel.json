{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",  
      "dest": "server.js"
    },
    {
      "src": "/records/(.*)",  
      "dest": "server.js"
    },
    {
      "src": "/uploads/(.*)",  
      "dest": "/uploads/$1"
    },
    {
      "src": "/(.*)",  
      "dest": "server.js"
    }
  ]
}
